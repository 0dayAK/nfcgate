<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".SettingsActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="13"
        android:columnCount="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some setting will be displayed here at a later time"
            android:id="@+id/textView_settings"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="             "
            android:id="@+id/textView_blankspace"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="1" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check to enable Debug Window"
            android:id="@+id/checkBoxDevMode"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="DevCheckboxClicked"
            android:checked="true"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter default Port"
            android:id="@+id/textViewDefaultPort"
            android:layout_row="4"
            android:layout_column="0"
            android:editable="false" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editPort"
            android:layout_row="4"
            android:layout_column="1"
            android:hint="&lt;Port&gt;"
            android:text=""
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter default IP address"
            android:id="@+id/textViewDefaultIp"
            android:layout_row="3"
            android:layout_column="0"
            android:editable="false" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editIP"
            android:layout_row="3"
            android:layout_column="1"
            android:hint="&lt;IP&gt;  "
            android:text=""
            android:layout_columnSpan="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save settings"
            android:onClick="btnSaveSettingsClicked"
            android:id="@+id/btnSaveSettings"
            android:layout_row="8"
            android:layout_column="0" />

    </GridLayout>

</LinearLayout>