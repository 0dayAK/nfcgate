<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#E5FDFC"
    tools:context=".SettingsActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="14"
        android:columnCount="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can change your settings below:"
            android:id="@+id/textView_settings"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                          "
            android:id="@+id/textView_blankspace"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnSpan="1" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check to enable Debug Window"
            android:id="@+id/checkBoxDevMode"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="DevCheckboxClicked"
            android:checked="true"
            android:layout_columnSpan="1" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable ReaderMode only (disable HCE)"
            android:id="@+id/checkReaderMode"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="ReaderModeCheckboxClicked"
            android:checked="false"
            android:layout_columnSpan="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter default IP address"
            android:id="@+id/textViewDefaultIp"
            android:layout_row="4"
            android:layout_column="0"
            android:editable="false"
            android:layout_gravity="left|center"
            android:layout_columnSpan="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editIP"
            android:layout_row="4"
            android:layout_column="0"
            android:hint="&lt;IP&gt;  "
            android:text=""
            android:layout_gravity="left|center"
            android:layout_columnSpan="2"
            android:gravity="right"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter default Port"
            android:id="@+id/textViewDefaultPort"
            android:layout_row="5"
            android:layout_column="0"
            android:editable="false"
            android:layout_gravity="left|center"
            android:layout_columnSpan="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editPort"
            android:layout_row="5"
            android:layout_column="0"
            android:hint="&lt;Port&gt;"
            android:text=""
            android:layout_gravity="left|center"
            android:layout_columnSpan="2"
            android:gravity="right"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                          "
            android:id="@+id/textView_blankspace3"
            android:layout_column="0"
            android:layout_row="7"
            android:layout_columnSpan="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save settings"
            android:onClick="btnSaveSettingsClicked"
            android:id="@+id/btnSaveSettings"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/color_selector1"
            android:layout_columnSpan="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                          "
            android:id="@+id/textView_blankspace2"
            android:layout_column="0"
            android:layout_row="11"
            android:layout_columnSpan="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supported features by your smartphone"
            android:id="@+id/textViewSupportedFeatures"
            android:layout_row="12"
            android:layout_column="0"
            android:layout_columnSpan="1" />

    </GridLayout>

</LinearLayout>