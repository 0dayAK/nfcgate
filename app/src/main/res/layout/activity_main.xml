<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#E5FDFC"
    android:id="@+id/activity_main">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:columnCount="2"
        android:rowCount="30">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editConnectionStatus"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Server status: "
            android:editable="false"
            android:layout_columnSpan="2" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editOtherDevice"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Partner status: "
            android:editable="false"
            android:layout_columnSpan="2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editIP"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center"
            android:hint="Enter &lt;IP>  "
            android:freezesText="true"
            android:text=""
            android:inputType="text" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editPort"
            android:layout_row="4"
            android:layout_column="1"
            android:freezesText="true"
            android:hint="Enter &lt;Port>"
            android:text=""
            android:layout_gravity="center"
            android:inputType="number" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Create Session"
            android:id="@+id/btnCreateSession"
            android:layout_row="6"
            android:layout_column="0"
            android:onClick="ButtonCreateSessionClicked"
            android:layout_margin="3dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/color_selector1"
            android:layout_gravity="center" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Join Session"
            android:id="@+id/btnJoinSession"
            android:layout_row="6"
            android:layout_column="1"
            android:onClick="ButtonJoinSessionClicked"
            android:layout_margin="3dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/color_selector1"
            android:layout_gravity="center" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:id="@+id/resetstatus"
            android:layout_row="8"
            android:layout_column="0"
            android:onClick="ButtonResetClicked"
            android:layout_margin="3dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/color_selector2"
            android:layout_gravity="center" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Disconnect"
            android:id="@+id/abortbutton"
            android:layout_row="8"
            android:layout_column="1"
            android:onClick="ButtonAbortClicked"
            android:layout_margin="3dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/color_selector2"
            android:layout_gravity="center"
            android:enabled="false" />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDevModeEnabledDebugging"
        android:layout_row="16"
        android:layout_column="0"
        android:text="Debugging Output:\n"
        android:layout_rowSpan="8"
        android:layout_columnSpan="2"
        android:visibility="visible"
        android:editable="false"
        android:layout_gravity="top|left|bottom|center|right"
        android:layout_margin="3dp"
        android:singleLine="false" />

</GridLayout>

</RelativeLayout>
