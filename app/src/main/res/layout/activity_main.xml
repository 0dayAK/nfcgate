<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/activity_main">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:id="@+id/resetstatus"
            android:layout_row="9"
            android:layout_column="0"
            android:onClick="ButtonResetClicked"
            android:layout_gravity="left" />

        <EditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/editPort"
            android:layout_row="5"
            android:layout_column="1"
            android:freezesText="true"
            android:hint="Enter &lt;Port>"
            android:text=""
            android:layout_gravity="left" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Create Session"
            android:id="@+id/btnCreateSession"
            android:layout_row="7"
            android:layout_column="0"
            android:onClick="ButtonCreateSessionClicked"
            android:layout_gravity="left" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Join Session"
            android:id="@+id/btnJoinSession"
            android:layout_row="7"
            android:layout_column="1"
            android:onClick="ButtonJoinSessionClicked"
            android:layout_gravity="left" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Abort"
            android:id="@+id/abortbutton"
            android:layout_row="9"
            android:layout_column="1"
            android:onClick="ButtonAbortClicked"
            android:layout_gravity="left" />

        <EditText
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:id="@+id/editConnectionStatus"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Connection status: "
            android:editable="false"
            android:layout_columnSpan="2" />

        <EditText
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:id="@+id/editOtherDevice"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Status of partner: "
            android:editable="false"
            android:layout_columnSpan="2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editIP"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="left|center"
            android:hint="Enter &lt;IP>  "
            android:freezesText="true"
            android:text="" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/DisplayMsg"
            android:layout_row="11"
            android:layout_column="0"
            android:text="Please hold your device next to an NFC tag / reader"
            android:layout_rowSpan="2"
            android:editable="false"
            android:enabled="true"
            android:focusable="false"
            android:layout_columnSpan="2" />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/editTextDevModeEnabledDebugging"
        android:layout_row="13"
        android:layout_column="0"
        android:text="Debugging Infos: "
        android:layout_rowSpan="10"
        android:layout_columnSpan="2"
        android:visibility="visible"
        android:editable="false" />

</GridLayout>

    <Gallery
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gallery"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="168dp" />

</RelativeLayout>
