<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#E5FDFC"
    android:id="@+id/activity_main">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:columnCount="2"
        android:rowCount="30">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editConnectionStatus"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Connection status: "
            android:editable="false"
            android:layout_columnSpan="2" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editOtherDevice"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Status of partner: "
            android:editable="false"
            android:layout_columnSpan="2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editIP"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center"
            android:hint="Enter &lt;IP>  "
            android:freezesText="true"
            android:text="" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editPort"
            android:layout_row="4"
            android:layout_column="1"
            android:freezesText="true"
            android:hint="Enter &lt;Port>"
            android:text=""
            android:layout_gravity="center" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Create Session"
            android:id="@+id/btnCreateSession"
            android:layout_row="6"
            android:layout_column="0"
            android:onClick="ButtonCreateSessionClicked"
            android:background="#66DDFA"
            android:layout_margin="3dp"
            android:layout_gravity="center" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Join Session"
            android:id="@+id/btnJoinSession"
            android:layout_row="6"
            android:layout_column="1"
            android:onClick="ButtonJoinSessionClicked"
            android:background="#66DDFA"
            android:layout_margin="3dp"
            android:layout_gravity="center" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:id="@+id/resetstatus"
            android:layout_row="8"
            android:layout_column="0"
            android:onClick="ButtonResetClicked"
            android:background="#E83D17"
            android:layout_margin="3dp"
            android:layout_gravity="center" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Abort"
            android:id="@+id/abortbutton"
            android:layout_row="8"
            android:layout_column="1"
            android:onClick="ButtonAbortClicked"
            android:background="#E83D17"
            android:layout_margin="3dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                          "
            android:id="@+id/textView_blankspace"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DisplayMsg"
            android:layout_row="12"
            android:layout_column="0"
            android:text="Please hold an NFC tag or reader \nnext to your device"
            android:layout_rowSpan="2"
            android:editable="false"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                          "
            android:id="@+id/textView_blankspace3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="14" />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDevModeEnabledDebugging"
        android:layout_row="16"
        android:layout_column="0"
        android:text="Debugging Output: "
        android:layout_rowSpan="8"
        android:layout_columnSpan="2"
        android:visibility="visible"
        android:editable="false"
        android:layout_gravity="top|left|bottom|center|right"
        android:layout_margin="3dp"
        android:singleLine="false" />

</GridLayout>

</RelativeLayout>
